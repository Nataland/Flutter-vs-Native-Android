<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center"
    tools:context="challenge.nataland.vacationnativeandroid.VacationActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/vacation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/going_on_vacation"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/gothamssm_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:fontFamily="@font/gothamssm_book"
        android:text="@string/vacation_description"/>

    <Button
        android:layout_width="match_parent"
        android:background="@drawable/button_background"
        android:text="@string/set_a_vacation"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/gothamssm_medium"
        android:layout_margin="24dp"
        android:layout_height="wrap_content" />

</LinearLayout>
